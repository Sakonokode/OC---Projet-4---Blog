{% extends 'layout.html.twig' %}

{% block body_id 'homepage' %}

{#
    the homepage is a special page which displays neither a header nor a footer.
    this is done with the 'trick' of defining empty Twig blocks without any content
#}
{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>{{ 'Homepage' }}</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="jumbotron">
                <p>
                    {{ 'Blog' }}
                </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/posts">
                        <i class="fa fa-users" aria-hidden="true"></i> {{ 'Continuer' }}
                    </a>
                </p>
            </div>
        </div>
        {% if is_authenticated() %}
            <div class="col-sm-6">
                <div class="jumbotron">
                    <p>
                        {{ 'Logout' }}
                    </p>
                    <p>
                        <a class="btn btn-primary btn-lg" href="/logout">
                            <i class="fa fa-lock" aria-hidden="true"></i> {{ 'Continuer' }}
                        </a>
                    </p>
                </div>
            </div>
        {% endif %}

        {% if not is_authenticated() %}
            <div class="col-sm-6">
                <div class="jumbotron">
                    <p>
                        {{ 'Login' }}
                    </p>
                    <p>
                        <a class="btn btn-primary btn-lg" href="/login">
                            <i class="fa fa-lock" aria-hidden="true"></i> {{ 'Continuer' }}
                        </a>
                    </p>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}