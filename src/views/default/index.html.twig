{% extends 'layout.html.twig' %}

{% block main %}
    <h1>{{ 'posts list' }}</h1>

    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col">{{ 'label.title' }}</th>
            <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> {{ 'label.published_at' }}</th>
            <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions' }}</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.title }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ 'admin_post_show' }}" class="btn btn-sm btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show' }}
                        </a>

                        <a href="{{ 'admin_post_edit' }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit' }}
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'post.no_posts_found' }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ 'admin_post_new' }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create_post' }}
        </a>
    </div>




{% endblock %}