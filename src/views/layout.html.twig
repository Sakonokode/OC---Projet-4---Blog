<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>{% block title %}Writter's Blog{% endblock %}</title>
    <script src="https://use.fontawesome.com/90e704ff06.js"></script>
    {% block stylesheets %}
        <link rel="stylesheet" href="../../public/css/test.css">
    {% endblock %}

    <link rel="icon" type="image/x-icon" href=""/>
</head>

<body id="{% block body_id %}{% endblock %}">

{% block header %}
    <header>
        <div class="navbar navbar-default navbar-static-top" role="navigation">
            <div class="container">
                <div class="navbar-header col-md-3 col-lg-2">
                    <a class="navbar-brand" href="/">
                        Writter's Blog
                    </a>
                    <button type="button" class="navbar-toggle"
                            data-toggle="collapse"
                            data-target=".navbar-collapse">
                        <span class="sr-only">{{ 'menu.toggle_nav' }}</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        {% if not is_authenticated() %}
                        <li>
                            <a href="{{ '/login/' }}"> <i class="fa fa-home" aria-hidden="true"></i> {{ 'Login' }}
                            </a>
                        </li>

                        {% else %}
                            <li>
                                <a href="{{ '/logout/' }}">
                                    <i class="fa fa-sign-out" aria-hidden="true"></i> {{ ' Logout ' ~ display_user_email() }}
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

<div class="container body-container">
    {% block body %}
        <div class="row">
            <div id="main" class="col-sm-9">


                {% block main %}{% endblock %}
            </div>

            <div id="sidebar" class="col-sm-3">

            </div>
        </div>
    {% endblock %}
</div>

{% block footer %}

{% endblock %}

{% block javascripts %}

{% endblock %}


</body>
</html>