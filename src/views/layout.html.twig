<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>{% block title %}Blog d'Ecrivain{% endblock %}</title>
    <link rel="alternate" type="application/rss+xml" title="{{ 'rss.title' }}" href="">
    {% block stylesheets %}
        <link rel="stylesheet" href="../../public/css/test.css">
    {% endblock %}

    <link rel="icon" type="image/x-icon" href=""/>
</head>

<body id="{% block body_id %}{% endblock %}">

{% block header %}
    <header>
        <div class="navbar navbar-default navbar-static-top" role="navigation">
            <div class="container">
                <div class="navbar-header col-md-3 col-lg-2">
                    <a class="navbar-brand" href="">
                        Symfony Demo
                    </a>

                    <button type="button" class="navbar-toggle"
                            data-toggle="collapse"
                            data-target=".navbar-collapse">
                        <span class="sr-only">{{ 'menu.toggle_nav' }}</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">

                        {% block header_navigation_links %}
                            <li>
                                <a href="">
                                    <i class="fa fa-home" aria-hidden="true"></i> {{ 'menu.homepage' }}
                                </a>
                            </li>
                        {% endblock %}

                        <li>
                            <a href=""> <i class="fa fa-search"></i> {{ 'menu.search' }}
                            </a>
                        </li>

                        {% if app.user %}
                            <li>
                                <a href="">
                                    <i class="fa fa-sign-out" aria-hidden="true"></i> {{ 'menu.logout' }}
                                </a>
                            </li>
                        {% endif %}

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                               aria-expanded="false" id="locales">
                                <i class="fa fa-globe" aria-hidden="true"></i>
                                <span class="caret"></span>
                                <span class="sr-only">{{ 'menu.choose_language' }}</span>
                            </a>
                            <ul class="dropdown-menu locales" role="menu" aria-labelledby="locales">
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

<div class="container body-container">
    {% block body %}
        <div class="row">
            <div id="main" class="col-sm-9">


                {% block main %}{% endblock %}
            </div>

            <div id="sidebar" class="col-sm-3">

            </div>
        </div>
    {% endblock %}
</div>

{% block footer %}

{% endblock %}

{% block javascripts %}

{% endblock %}


</body>
</html>