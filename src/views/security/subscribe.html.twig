{% extends 'layout.html.twig' %}

{% block body_id 'subscribe' %}

{% block main %}
    <div class="row">
        <div class="col-sm-5">
            <div class="well">
                <form action="{{ '/subscribe/' }}" method="post">
                    <fieldset>
                        <legend><i class="fa fa-lock" aria-hidden="true"></i> {{ 'Subscribe' }}</legend>
                        <div class="form-group">
                            <label for="email">{{ 'Email' }}</label>
                            <input type="text" id="email" name="_email" class="form-control"/>
                            <label for="nickname">{{ 'Nickname' }}</label>
                            <input type="text" id="nickname" name="_nickname" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label for="password">{{ 'Password' }}</label>
                            <input type="password" id="password" name="_password" class="form-control" />
                            <label for="password-confirmation">Password Confirmation</label>
                            <input type="password" id="password-confirmation" name="_password-confirmation" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-sign-in" aria-hidden="true"></i> {{ 'Subscribe' }}
                        </button>
                    </fieldset>
                </form>
            </div>
        </div>

        <div id="subscribe-help" class="col-sm-7">
            <h3>
                <i class="fa fa-long-arrow-left" aria-hidden="true"></i>
                {{ 'Help subscribe users' }}
            </h3>

            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th scope="col">{{ 'Email' }}</th>
                    <th scope="col">{{ 'Password' }}</th>
                    <th scope="col">{{ 'Role' }}</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>john_user@domain.com</td>
                    <td>kitten</td>
                    <td><code>ROLE_USER</code> ({{ 'help.role_user' }})</td>
                </tr>
                <tr>
                    <td>jane_admin@domain.com</td>
                    <td>kitten</td>
                    <td><code>ROLE_ADMIN</code> ({{ 'help.role_admin' }})</td>
                </tr>
                </tbody>
            </table>

            <div id="login-users-help" class="panel panel-default">
                <div class="panel-body">
                    <p>
                        <span class="label label-success">{{ 'note' }}</span>
                        {{ 'help.reload_fixtures' }}<br/>

                        <code class="console">$ php bin/console doctrine:fixtures:load</code>
                    </p>

                    <p>
                        <span class="label label-success">{{ 'tip' }}</span>
                        {{ 'help.add_user' }}<br/>

                        <code class="console">$ php bin/console app:add-user</code>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block sidebar %}
    {{ parent() }}

{% endblock %}
