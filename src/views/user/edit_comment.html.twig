{% extends 'layout.html.twig' %}

{% block body_id 'edit_comment' %}

{% block main %}
    {% if is_authenticated() %}
        <div class="row">
            <div class="col-sm-5">
                <div class="well">
                    <form action="{{ '/comments/edit/' ~ comment.id }}" method="post">
                        <fieldset>
                            <legend><i class="fa fa-pencil" aria-hidden="true"></i> {{ 'Edit Comment' }}</legend>
                            <div class="form-group">
                                <label for="content">{{ 'Content' }}</label>
                                <input type="text" id="content" name="_content" value="{{ comment.content.content }}" class="form-control"/>
                            </div>
                            <button type="submit" class="btn btn-warning">
                                <i class="fa fa-sign-in" aria-hidden="true"></i> {{ 'Submit Modification' }}
                            </button>
                            <a href="{{ '/comments/delete/' ~ comment.id }}" class="btn btn btn-danger">
                                <i class="fa fa-trash-o" aria-hidden="true"></i> {{ 'Delete' }}
                            </a>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    {% else %}
        <div id="login-users-help" class="panel panel-default">
            <div class="panel-body">
                <p>
                    <span class="label label-danger">{{ 'note' }}</span>
                    {{ 'You are not logged !' }}<br/>
                </p>
            </div>
        </div>
    {% endif %}

{% endblock %}