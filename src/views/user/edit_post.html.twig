{% extends 'layout.html.twig' %}

{% block body_id 'edit_post' %}

{% block main %}
    {% if is_authenticated() %}
        <div class="row">
            <div class="col-sm-5">
                <div class="well">
                    <form action="{{ '/posts/edit-post/' }}{{ post.id }}" method="post">
                        <fieldset>
                            <legend><i class="fa fa-pencil" aria-hidden="true"></i> {{ 'Edit Post' }}</legend>
                            <div class="form-group">
                                <label for="title">{{ 'Title' }}</label>
                                <input type="text" id="title" name="_title" value="{{ post.title }}" class="form-control"/>
                                <label for="description">{{ 'Description' }}</label>
                                <input type="text" id="description" name="_description" value="{{ post.description }}" class="form-control"/>
                                <label for="content">{{ 'Content' }}</label>
                                <input type="text" id="content" name="_content" value="{{ post.content.content }}" class="form-control"/>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-sign-in" aria-hidden="true"></i> {{ 'Submit Modification' }}
                            </button>
                            <a href="{{ '/posts/delete-post/' }}{{ post.id }}" class="btn btn btn-danger">
                                <i class="fa fa-trash-o" aria-hidden="true"></i> {{ 'Delete' }}
                            </a>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    {% else %}
        <div id="login-users-help" class="panel panel-default">
            <div class="panel-body">
                <p>
                    <span class="label label-danger">{{ 'note' }}</span>
                    {{ 'You are not logged !' }}<br/>
                </p>
            </div>
        </div>
    {% endif %}

{% endblock %}

{% block sidebar %}

    {{ parent() }}

{% endblock %}
