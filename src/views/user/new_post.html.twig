{% extends 'layout.html.twig' %}

{% block body_id 'new_post' %}

{% block main %}
    <div class="row">
        <div class="col-sm-12">
            <div class="well">
                <form action="{{ '/posts-new' }}" method="post">
                    <fieldset>
                        <legend><i class="fa fa-lock" aria-hidden="true"></i> {{ 'New Post' }}</legend>
                        <div class="form-group">
                            <label for="title">{{ 'Title' }}</label>
                            <input type="text" id="title" name="_title" class="form-control"/>
                            <label for="description">{{ 'Description' }}</label>
                            <input type="text" id="description" name="_description" class="form-control"/>
                            <label for="content">{{ 'Content' }}</label>
                            <textarea id="content" name="_content" class="form-control">
                            </textarea>
                        </div>
                        <a href="{{ '/posts' }}" class="btn btn btn-primary">
                            <i class="fa fa-arrow-left" aria-hidden="true"></i> {{ 'Back to Posts list' }}
                        </a>
                        <button type="submit" class="btn btn-success pull-right">
                            <i class="fa fa-sign-in" aria-hidden="true"></i> {{ 'Submit' }}
                        </button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
{% endblock %}